<div class="content pure-u-1 pure-u-md-3-4">
    <div class="posts">
      <h1 class="content-subhead">Pinned Post</h1>

      <section class="post">
          <header class="post-header">
              <%= image_tag("tilo-avatar.png", alt: "Tilo Mitra&#x27;s avatar", height: 48, width: 48, :class => "post-avatar") %>

              <h2 class="post-title"><%= @post.post_title %></h2>

              <p class="post-meta">
                  By <a href="#" class="post-author">Tilo Mitra</a> under <a class="post-category post-category-design" href="#">CSS</a> <a class="post-category post-category-pure" href="#">Pure</a>
              </p>
          </header>

          <div class="post-description">
              <p>
                  <%= raw @post.post_content %>
              </p>
          </div>
      </section>
  </div>

</div>